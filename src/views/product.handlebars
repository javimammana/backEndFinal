<div class="content">
    <div class="w100 flex colum center">
        <h1>{{product.title}}</h1>
        <div class="border flex w100 productPrincipal">
            <div class="imgProducts">
                <img class="imgDetail" src="/img/products/{{product.img}}" alt="Producto">
            </div>
            <div class="porductDetail flex colum w100">
                <div class="w100">
                    <p>{{product.description}}</p>
                    <p>{{product.category}}</p>
                    <p>{{product.code}} - STOCK: {{product.stock}}</p>
                </div>
                <div class="flex w100 between">
                    <div><p>${{product.price}}</p></div>
                    <div class="flex der productButton">
                        {{#if product.stock}}
                        <form action="/api/carts/{{user.cart}}/product/{{product._id}}/products" method="POST">
                            <button class="btnProducts btn btnGREY">Comprar!</button>
                        </form>
                        {{else}}
                            {{#if product.notify}}
                                <p class="">Notify!</p>
                            {{else}}
                                <form action="/api/products/{{product._id}}/notify/{{user.email}}/products" method="POST">
                                    <button class="btnProducts btn btnWARNIG">Notificarme!</button>
                                </form>
                            {{/if}}
                        {{/if}}
                        <form action="/api/products/{{product._id}}/favorite/{{user.email}}/products" method="POST">
                            <button class="btnFavorite"><img src="/img/{{#if product.favorite}}favorite.png{{else}}nofavorite.png{{/if}}" alt=""></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>