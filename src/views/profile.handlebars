        {{#if docs.premium}}
            {{#if docs.noPremium}}
                <p>Ya esta enviado el pedido al administrador para dejar de ser Premium!</p>
            {{else}}
                <button class="btn btnRED" onclick="noPremium('{{id}}')">Quiero dejar de ser PREMIUM!</button>
            {{/if}}
        {{else}}
            <p>Para ser usuario Premium tenes que adjuntarnos en formato PDF:</p>

            <div class="border w100">
                <p>Foto DNI Frente y Dorso</p>
                {{#if docs.identificacion}}
                    <div class="w100 flex between">
                        <p>{{docs.identificacion}}</p>
                        <button class="btn btnRED" onclick="deleteDoc('identificacion', '{{id}}')">Borrar Archivo</button>
                    </div>
                {{else}}
                    <form action="/api/users/{{id}}/documents" method="POST" class="" enctype="multipart/form-data">
                        <div class="w100">
                            <div class="flex file w100 between">
                                <input type="file" name="identificacion" required>
                                <button class="btn btnWARNIG" type="submit">Enviar!</button>
                            </div>
                        </div>
                    </form>
                {{/if}}
            </div>

            <div class="border w100">
                <p>Constancia de Cuenta</p>
                {{#if docs.cuenta}}
                    <div class="w100 flex between">
                        <p>{{docs.cuenta}}</p>
                        <button class="btn btnRED" onclick="deleteDoc('cuenta', '{{id}}')">Borrar Archivo</button>
                    </div>
                {{else}}
                    <form action="/api/users/{{id}}/documents" method="POST" class="" enctype="multipart/form-data">
                        <div class="w100">
                            <div class="flex file w100 between">
                                <input type="file" name="cuenta" required>
                                <button class="btn btnWARNIG" type="submit">Enviar!</button>
                            </div>
                        </div>
                    </form>
                {{/if}}
            </div>

            <div class="border w100">
                <p>Servicio donde figure el Domicilio</p>
                {{#if docs.domicilio}}
                    <div class="w100 flex between">
                        <p>{{docs.domicilio}}</p>
                        <button class="btn btnRED" onclick="deleteDoc('domicilio', '{{id}}')">Borrar Archivo</button>
                    </div>
                {{else}}
                    <form action="/api/users/{{id}}/documents" method="POST" class="" enctype="multipart/form-data">
                        <div class="w100">
                            <div class="flex file w100 between">
                                <input type="file" name="domicilio" required>
                                <button class="btn btnWARNIG" type="submit">Enviar!</button>
                            </div>
                        </div>
                    </form>
                {{/if}}
            </div>
            {{#if docs.completo}}
                {{#if docs.getPremium}}
                <p>Tu pedido para ser PREMIUM ya esta enviado al Administrador</p>
                {{else}}
                <button class="w100 btn btnWARNIG" onclick="getPremium('{{id}}')">Solicitar PREMUIM!</button>
                {{/if}}
            {{else}}
            <p>Completa la Documentacion para ser Premium</p>
            {{/if}}
        {{/if}}
        </div>
        {{/if}}
    </div>
</div>

<script>
    function deleteDoc(doc, id) {
        fetch(`/api/users/${id}/${doc}`, {
            method: 'DELETE'
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error al borrar documento');
                }
                location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }

    function getPremium(id) {
        fetch(`/api/users/${id}/getPremium`, {
            method: 'PUT'
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error al Solicitar PREMIUM');
                }
                location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }

    function noPremium(id) {
        fetch(`/api/users/${id}/noPremium`, {
            method: 'PUT'
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error al Solicitar PREMIUM');
                }
                location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
</script>